# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
file_type = jsx
trim_trailing_whitespace = true

[*.{css,less,styl,scss,sass}]
indent_size = 2
indent_style = space

[*.svg]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{md,mdx}]
max_line_length = 0
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[*.{huskyrc,lintstagedrc,eslintrc,commitlintrc,babelrc}]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0
