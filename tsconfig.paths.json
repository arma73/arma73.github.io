{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "react-dom": ["@hot-loader/react-dom"],
            "tslib": ["node_modules/tslib/tslib.d.ts"],
            "_src/*": ["src/*"],
            "_app/*": ["src/app/*"],
            "_hoc/*": ["src/hoc/*"],
            "_i18n/*": ["src/i18n/*"],
            "_hooks/*": ["src/hooks/*"],
            "_pages/*": ["src/pages/*"],
            "_theme/*": ["src/theme/*"],
            "_utils/*": ["src/utils/*"],
            "_routes/*": ["src/routes/*"],
            "_content/*": ["src/content/*"],
            "_context/*": ["src/context/*"],
            "_assets/*": ["public/assets/*"],
            "_static/*": ["public/static/*"],
            "_services/*": ["src/services/*"],
            "_settings/*": ["src/settings/*"],
            "_components/*": ["src/components/*"],
            "_interfaces/*": ["src/interfaces/*"]
        },
        "typeRoots": [
            "typings"
        ]
    },
    "exclude": [
        "dist",
        "configs/*",
        "node_modules",
        "**/node_modules/*",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.d.ts"
    ]
}
